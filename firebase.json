{
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "**/*.php",
      "**/*.sql",
      "**/*.md",
      "**/*.exe",
      "**/*.bat",
      "**/*.sh",
      "**/*.py",
      "admin/**",
      "vendor/**",
      "api/**",
      "phpqrcode/**",
      "qrcodes/**",
      "composer.json",
      "railway.json",
      "*.log"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "source": "**/*.@(jpg|jpeg|gif|png|svg|webp)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=31536000"
          }
        ]
      },
      {
        "source": "**/*.@(css|js)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=31536000"
          }
        ]
      }
    ]
  }
}
